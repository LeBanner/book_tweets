<!DOCTYPE html>
<html>
  <head>
    <title>BookTweets</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
     <div class="header__bar row">
       <h1 class="grid-6"><a href="/"><%= image_tag "book_tweet2.png" %></a></h1>
       <% if user_signed_in? %>
        <div class="user_nav grid-6">
         <span><%= current_user.nickname %>
          <ul>
           <li>
            <%= link_to "マイページ", "/users/#{current_user.id}" %>
            <%= link_to "ログアウト", destroy_user_session_path, class: "header__right--btn", method: :delete %>
           </li>
          </ul>
         </span>
         <%= link_to "投稿する", new_tweet_path, class: "post" %>
        </div>
       <% else %>
        <div class="user_nav grid-6">
         <%= link_to "ログイン", new_user_session_path, class: "post" %>
         <%= link_to "新規登録", new_user_registration_path, class: "post" %>
        </div>
       <% end %>
     </div>
    </header>
    <%= yield %>
    <footer>
     <p>
      <%= image_tag "footer1.png" %>
     </p>
    </footer>
    
  </body>
</html>
